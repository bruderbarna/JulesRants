<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "tinymce form-control" %>
    <%= tinymce %>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <h4><label><%= f.check_box :published %> Published</label></h4>
    </div>
  </div>
  <div class="form-group">
    <%= f.button type: "submit", class: "btn btn-success" do %>
      <%= fa_icon "edit", text: "Create Post" %>
    <% end %>
  </div>
<% end %>
